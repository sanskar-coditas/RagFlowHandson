# ---------------------------------------------------------------------------
# OpenAI / Azure APIM (embedding & LLM)
# ---------------------------------------------------------------------------
APIM_BASE_URL=https://apim-xxx.azure-api.net
APIM_SUBSCRIPTION_KEY=your_apim_subscription_key
AZURE_OPENAI_ENDPOINT=https://xxx.openai.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_EMBEDDING_API_VERSION=2025-01-01-preview
AZURE_OPENAI_API_VERSION=2025-01-01-preview
OPENAI_EMBEDDING_MODEL=embedding

# LLM for answer generation
AZURE_OPENAI_CHAT_MODEL=gpt-4.1

# ---------------------------------------------------------------------------
# Cohere via AWS Bedrock
# ---------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BEDROCK_REGION=us-east-1
EMBEDDINGS_MODEL_NAME=cohere.embed-english-v3

# ---------------------------------------------------------------------------
# NVIDIA NIM (free embedding)
# ---------------------------------------------------------------------------
NVIDIA_API_KEY=nvapi-...

# ---------------------------------------------------------------------------
# Qdrant Cloud
# ---------------------------------------------------------------------------
QDRANT_URL=https://your-cluster-id.us-east4-0.gcp.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_jwt_api_key
QDRANT_COLLECTION=rag_demo

# Set to 0 when using Qdrant cloud (above). Set to 1 for in-memory store when not using Qdrant.
QDRANT_IN_MEMORY=0

# Optional: local Qdrant (when not using cloud and QDRANT_IN_MEMORY=0)
# QDRANT_HOST=localhost
# QDRANT_PORT=6333
